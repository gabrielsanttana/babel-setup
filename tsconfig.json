{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "typeRoots": [
      "./node_modules/@types/",
       "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true ,
    "baseUrl": ".",
    "paths": {
      "controllers": ["./src/controlers/*"],
      "models": ["./src/models/*"],
      "views": ["./src/views/*"],
      "config": ["./src/config/*"]
    }
  }
}
